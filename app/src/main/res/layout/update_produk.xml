<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProduk"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Barang"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textStyle="bold"
        />
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_idu"
        android:hint="Id"
        android:editable="false"
        />
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_produku"
        android:hint="Produk"/>
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_motifu"
        android:hint="Motif"/>
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_warnau"
        android:hint="Warna "/>
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_sizeu"
        android:hint="Size"/>
    <EditText
        style="@style/edit_text"
        android:textColor="@color/black"
        android:id="@+id/input_priceu"
        android:hint="Price "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            style="@style/btn_Style"
            android:id="@+id/btn_update"
            android:text="Update"
            android:onClick="updateData"/>
        <Button
            android:id="@+id/btn_cancel"
            style="@style/btn_Style"
            android:text="Cancel"
            android:onClick="cancelData"/>

    </LinearLayout>


</LinearLayout>